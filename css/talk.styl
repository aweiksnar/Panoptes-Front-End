.main-talk
  .main-talk-project
    .main-talk-project-item
      width: 33%
      background: lightgrey
      box-sizing: border-box
      margin: 10px
      padding: 10px

  .main-talk-header
    width: 100%
    height: 150px
    color: #fff
    background: rgb(38, 186, 255)
    padding: 20px
    box-sizing: border-box
    h1
      line-height: 110px


.talk
  overflow: auto
  a
    display: block
  .talk-item
    background: rgba(0,0,0, 0.1)
    border-radius: 5px
    padding: 20px
    margin: 10px 0
    &:hover
      background: rgba(0,0,0,0.15)
    p
      margin: 0
  textarea
    display: block
    font-size: 20px
    box-sizing: border-box
    width: 400px